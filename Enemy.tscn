script/source = "extends KinematicBody2D

var walkLeft = true;

var walkSpeed: int = 100;
var startPosition: int = 0;
var moved = 250;

var enemyDeathSound: AudioStreamPlayer2D;
var collisionShape: CollisionShape2D;

func _ready():
	enemyDeathSound = $EnemyDeathSound;
	collisionShape = $CollisionShape2D;

func _physics_process(delta):
	$CollisionShape2D/Enemy.flip_h = walkLeft;
	
	move_and_slide_with_snap(Vector2(walkSpeed, 50), Vector2.DOWN * 100);
	
	moved += abs(walkSpeed * delta);
	
	if(moved > 500):
		moved = 0;
		walkLeft = !walkLeft;
		walkSpeed = -walkSpeed;
	
func onShot():
	enemyDeathSound.play()
	visible = false;
	set_process(false);
	set_physics_process(false);
	collisionShape.disabled = true;
	yield(get_tree().create_timer(0.5), \"timeout\")
	
	queue_free();
"

