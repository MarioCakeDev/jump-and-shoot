script/source = "extends Node

var Stopwatch = load(\"res://Stopwatch.gd\");
var gravityRotation = 0

var bodies = []

func _process(_delta):
	var bodiesToRemove = []
	for body in bodies:
		if is_instance_valid(body):
			body.apply_rotation(gravityRotation)
		else:
			bodiesToRemove.append(body)
	
	for body in bodiesToRemove:
		removeBody(body)
	
func _on_body_entered(body):
	if body.has_method(\"apply_rotation\"):
		bodies.append(body)


func _on_body_exited(body):
	if body.has_method(\"apply_rotation\"):
		body.apply_rotation(0)
		removeBody(body)

func removeBody(body):
	bodies.remove(bodies.find(body))
"

